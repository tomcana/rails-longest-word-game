<h1>New Game</h1>

<div class="nums">
  <% @letters.each do |letter| %>
    <p><%= letter %></p>
  <% end %>
</div>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="input-group">
    <input type="text" name="word" class="form-control" placeholder="What is the longest word you can find?">
    <div class="input-group-append">
    <input id="grid" name="grid" type="hidden" value="<%= @letters %>" />
    <input type="submit" class="btn btn-primary ask-btn" value="Play">
    </div>
  </div>
</form>
